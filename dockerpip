pipeline {
    agent { label 'builtinubuntu' }

    environment {
        DOCKER_CREDENTIALS = 'docker-hub-credentials' // Jenkins credentials ID
        IMAGE_NAME = 'snehal2004/someapp'             // Docker Hub repo
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ajay-raut/spnodeserver.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS}",
                                                     usernameVariable: 'DOCKER_USER',
                                                     passwordVariable: 'DOCKER_PASS')]) {
                        // Login to Docker Hub
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'

                        // Build Docker image
                        sh "docker build -t $IMAGE_NAME:latest ."

                        // Tag with Jenkins build number
                        sh "docker tag $IMAGE_NAME:latest $IMAGE_NAME:${BUILD_NUMBER}"

                        // Push both tags to Docker Hub
                        sh "docker push $IMAGE_NAME:latest"
                        sh "docker push $IMAGE_NAME:${BUILD_NUMBER}"
                    }
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    // Remove local images to save space
                    sh "docker rmi $IMAGE_NAME:latest || true"
                    sh "docker rmi $IMAGE_NAME:${BUILD_NUMBER} || true"
                }
            }
        }

    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Docker image built and pushed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
